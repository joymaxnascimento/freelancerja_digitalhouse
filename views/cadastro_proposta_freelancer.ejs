<%- include('./partials/header') %>
    <h1>Sou Freelancer</h1>
    <div class="proposta">
        <%- include('./partials/tipoServico') %>
            <div>
                <div class="buscar">
                    <input type="text" placeholder="Buscar..." />
                    <button>Buscar</button>
                </div>
                <div class="cards">
                    <% servicos.forEach(servico=> { %>
                        <div class="card">
                            <form action="../proposta/listaservicos" id="formListaServicos" method="POST">

                                <input id="idservico" type="hidden" name="idservico" value=<%=servico.idservico %>>

                                <h5>
                                    <%= servico.Usuario.nome %>
                                </h5>
                                <h5>
                                    <%= servico.TipoServico.servico %>
                                </h5>
                                <h4>
                                    <%= servico.data_entrega.toLocaleDateString("pt-BR") %>
                                </h4>
                                <p>
                                    <%= servico.descricao %>
                                </p>
                                <h3>
                                    <%= servico.valor_a_pagar %>
                                </h3>
                                <button type="submit">Fazer Proposta</button>
                            </form>
                        </div>
                        <% }) %>
                </div>
            </div>
    </div>
    <%- include('./partials/footer') %>