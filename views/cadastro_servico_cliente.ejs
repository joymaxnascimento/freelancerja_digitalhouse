<%- include('./partials/header') %>
    <div class="PropostaServico">
        <div class="TipoServico">
            <span>Categorias</span>
            <div class="topicos">
                <% tiposServicos.forEach(tipo=> { %>
                    <div class="entrada">
                        <label>
                        <input type  = "radio" 
                               name  = "idtipo_servico" 
                               class = bolaradiobutton
                               id    = <%=tipo.servico %> 
                               value = <%= tipo.idtipo_servico %>
                               form  = "formServico"
                        >
                                <%= tipo.servico %>
                        </label>
                    </div>
                    <% }) %>
            </div>
            <br>
            <br>
        </div>

        <div class="TempoDescr">
            <form class="formServico" 
                  action="servico/criar" 
                  id="formServico" 
                  method="POST">
                <div class="input_servico">

                    <label for="data_entrega">Data de entrega:</label>
                    <input type="date" id="data_entrega" name="data_entrega"><br><br>
                </div>
                <div class="input_servico">
                    <label for="decricao">Descreva o Serviço:</label>
                    <textarea rows="10" name="descricao" id="descricao" form="formServico"></textarea><br><br>
                </div>
                <div class="input_servico">
                    <label for="valor_a_pagar">Valor a pagar:</label><br>
                    <input type="number" step="0.01" placeholder="R$ 0.0" id="valor_a_pagar"
                        name="valor_a_pagar"><br><br>
                </div>
                <button class="BotaoCriarServico" type="submit">Criar Serviço</button>

            </form>
            </a>
        </div>
    </div>
    <%- include('./partials/footer') %>