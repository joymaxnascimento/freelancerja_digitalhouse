<%- include('./partials/header') %>
    <h1>Sou Cliente</h1>
    <div class="servico">
        <%- include('./partials/tipoServico.ejs') %>
            <form action="servico/criar" id="formServico" method="POST">
                <div>
                    <label for="data_entrega">Data de entrega:</label>
                    <input type="date" id="data_entrega" name="data_entrega">
                </div>
                <div>
                    <label for="decricao">Descreva o Serviço:</label>
                    <textarea name="descricao" id="descricao"></textarea>
                </div>
                <div>
                    <label for="valor_a_pagar">Valor a pagar:</label>
                    <input type="number" step="0.01" placeholder="R$ 0.0" id="valor_a_pagar"
                        name="valor_a_pagar"><br><br>
                </div>
                <button class="BotaoCriarServico" type="submit">Criar Serviço</button>
            </form>
    </div>
    <%- include('./partials/footer') %>