<%- include('./partials/header') %>
    <h1>Sou Cliente</h1>
    <div class="servico">
        <%- include('./partials/tipoServico.ejs') %>
            <form action="../servico/editar?_method=put" id="formCadastroServico" method="POST">
                <div>
                    <input type="hidden" id="idservico" name="idservico" value="<%= dadosAntigos.idservico %>">
                    <label for="data_entrega">Data de entrega:</label>
                    <input type="date" id="data_entrega" name="data_entrega" value= <%= dadosAntigos.data_entrega.toLocaleDateString("en-CA") %>>
                    <div class="erros">
                        <% if(locals.erros && erros.data_entrega){ %>
                            <span><%= erros.data_entrega.msg %></span>
                            <% } %>
                    </div>

                </div>
                <div>
                    <label for="decricao">Descreva o Serviço:</label>
                    <textarea name="descricao" id="descricao"><%= dadosAntigos.descricao %></textarea>
                    <div class="erros">
                        <% if(locals.erros && erros.descricao){ %>
                            <span><%= erros.descricao.msg %></span>
                            <% } %>
                    </div>
                </div>
                <div>
                    <label for="valor_a_pagar">Valor a pagar:</label>
                    <input type="number" step="0.01" placeholder="R$ 0.0" id="valor_a_pagar"
                        name="valor_a_pagar" value="<%= dadosAntigos.valor_a_pagar %>">
                        <div class="erros">
                            <% if(locals.erros && erros.valor_a_pagar){ %>
                                <span><%= erros.valor_a_pagar.msg %></span>
                                <% } %>
                        </div>
                        <br><br>
                </div>
                <div>
                    <div>
                        <button type="submit">Salvar</button>
                    </div>
                    <div>
                        <% if (locals.servicoCriado) { %>
                            <p class="erros">Serviço editado com sucesso!</p>
                            <% } %>
                    </div>
                </div>
            </form>
    </div>
    <%- include('./partials/footer') %>