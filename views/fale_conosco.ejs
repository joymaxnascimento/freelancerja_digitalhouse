<%- include('./partials/header') %>
    <div class="fale-conosco">
        <div>
            <img src="/images/contato3.png" alt="">
        </div>
        <form action="../faleconosco/enviar" id="formFaleConosco" method="POST">
            <div>
                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="nome" required="true">
            </div>
            <div>
                <label for="email">E-mail:</label>
                <input type="email" id="email" name="email" required="true">
            </div>
            <div>
                <label for="mensagem">Mensagem:</label>
                <textarea name="mensagem" id="mensagem" cols="30" rows="10" required="true"></textarea>
            </div>
            <button type="submit">Enviar</button>
            <div>
                <% if (locals.mensagemEnviada) { %>
                  <p class="erros">Mensagem enviada com sucesso!</p>
                  <% } %>
              </div>
        </form>
    </div>
    <%- include('./partials/footer') %>