<%- include('./partials/header') %>
    <h1>Sou Freelancer</h1>
    <div class="proposta">
        <%- include('./partials/tipoServico') %>
            <div>
                <div class="buscar">
                    <input type="text" placeholder="Buscar..." />
                </div>
                <div class="cards">
                    <% servicos.forEach(servico=> { %>
                        <div class="card">
                            <form id="formListaServicos" method="GET">
                                <input id="idtipo_servico" type="hidden" name="idtipo_servico" value=<%= servico.idtipo_servico %>>
                                <div>
                                    <div>
                                        <h4>Categoria:</h4>
                                        <h5>
                                            <%= servico.servico %>
                                        </h5>
                                    </div>
                                    <div>
                                        <div>
                                            <h4>Descrição:</h4>
                                            <p>
                                                <%= servico.descricao %>
                                            </p>
                                        </div>
                                    </div>
                                    <div>
                                        <h4>Data de entrega:</h4>
                                        <h4>
                                            <%= servico.data_entrega.toLocaleDateString("pt-BR") %>
                                        </h4>
                                    </div>

                                    <div>
                                        <h4>Valor:</h4>
                                        <h3>
                                            <%= servico.valor_a_pagar %>
                                        </h3>
                                    </div>
                                </div>
                                <% if(servico.propostas==0) {%>
                                    <button type="submit" formaction="/servico/<%=servico.idservico %>">Editar</button>
                                    <% } else{%>
                                        <button type="submit"
                                            formaction="/servico/propostas/<%=servico.idservico %>">Ver
                                            Propostas</button>
                                        <% } %>
                            </form>
                        </div>
                        <% }) %>
                </div>
            </div>
    </div>
    <%- include('./partials/footer') %>